    <!--智能选学使用-根据ID查看详情 包括关联数据-->
    <select id="selectZLXXWithAboutInfoById" parameterType="java.lang.Long" resultMap="ZLXXDetailResultMap">
        select
          ep.*,
          '22' as attachment_type,
          CASE WHEN ep.type IN ( 59025, 59026, 59027, 59030 ) THEN '59055,59056' WHEN ep.type = 59028 THEN '59070'
              WHEN ep.type = 59029 THEN 59069 ELSE '59029,59067,59068' END AS teacher_type
        from tab_pb_edu_position ep
