    <!--根据条件查询智能选学信息-->
    <select id="selectZLXXWithConditions" parameterType="java.util.Map"
            resultMap="ZLXXResultMap">
        SELECT
            ep.id,
            ep.`name`,
            ep.type,
            ep.property,
            ep.address,
            ep.quantity,
            ep.total_duration
        FROM
        tab_pb_edu_position ep
        <where>
            ep.del_flag = 0
            <if test="region != null and region != ''">
                AND ep.region = #{region}
            </if>
            <if test="jdType != null and jdType != ''">
                AND find_in_set(#{jdType}, ep.type)
            </if>
            <if test="dateRange != null and dateRange != ''">
                <choose>
                    <when test="dateRange == 1">
                        AND ep.total_duration &lt;= 2 * 60
                    </when>
                    <when test="dateRange == 2">
                        AND ep.total_duration BETWEEN 2 * 60 AND 6 * 60
                    </when>
                    <when test="dateRange == 3">
                        AND ep.total_duration > 6 * 60
                    </when>
                </choose>
            </if>
            <if test="quantity != null and quantity != ''">
                AND ep.quantity &lt;= #{quantity}
            </if>
            <if test="key != null and key != ''">
                AND ep.name like concat('%', #{key}, '%')
            </if>
        </where>
    </select>

    <!--逻辑删除-->
    <update id="logicDeleteById">
        UPDATE tab_pb_edu_position ep
        LEFT JOIN tab_pb_edu_position_project epp ON ep.id = epp.position_id
        LEFT JOIN tab_pb_edu_position_course epc ON ep.id = epc.position_id
        SET ep.del_flag = 1, epp.del_flag = 1
        WHERE ep.id = #{id}
    </update>

